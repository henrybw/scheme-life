;;;; Implements a DrScheme-based graphical driver on top of life-core
(include "life-core.scm")

(define (draw-grid canvas dc grid)
  (define (draw-rows canvas dc remaining-rows y)
    (if (not (null? remaining-rows))
        (begin
          (draw-cols canvas dc (car remaining-rows) 0 y)
          (draw-rows canvas dc (cdr remaining-rows) (+ y 1)))))
  (define (draw-cols canvas dc remaining-cols x y)
    (if (not (null? remaining-cols))
          (begin
            (if (= (car remaining-cols) 1)
                (send dc draw-rectangle (* x 16) (* y 16) 16 16))
            (draw-cols canvas dc (cdr remaining-cols) (+ x 1) y))))
  (send dc set-brush "black" 'solid)
  (send dc clear)
  (draw-rows canvas dc grid 0))

(define (animate-grid canvas dc grid frame-delay)
  (draw-grid canvas dc grid)
  (sleep frame-delay)
  (animate-grid canvas dc (evolve grid) frame-delay))

(define (create-frame grid width height render-func frame-delay)
  (let* ((frame (new frame% (label "Game of Life")
                     (width (* 16 width))
                     (height (* 16 height))))
         (canvas (new canvas% (parent frame)
                      (paint-callback
                        (lambda (canvas dc)
                          (render-func canvas dc grid frame-delay))))))
  frame))

